div ng-controller="TopicsCtrl as topicsCtrl" class="animated fadeIn lanes"

  div[
    class="to-talk-about lane"
    ng-controller="LaneCtrl as laneCtrl"
    ng-model="topicsCtrl.service.to_talk_about"
    data-drop="true"
    data-jqyoui-droppable="{multiple:true, onOver: 'dragOver', onOut: 'dragOut', onDrop: 'dragOut'}"
    ]
    h1 To talk about

    i class="sort fa fa-sort-amount-desc" ng-click="topicsCtrl.service.sort()"

    form ng-submit="topicsCtrl.create()"
      input ng-model="topicsCtrl.title" class="new-topic" type="text"

    ul class="topics"
      li[
        ng-controller="TopicCtrl as topicCtrl"
        ng-repeat="topic in topicsCtrl.service.to_talk_about"
        ng-click="topicCtrl.vote()"
        data-drag="true"
        data-jqyoui-options="{revert: 'invalid'}"
        ng-model="topicsCtrl.service.to_talk_about"
        data-jqyoui-draggable="{index: {{$index}}, animate: true}"
        class="topic"
        ]
        p ng-bind="topic.title"
        ul class="votes"
          li class="vote" ng-repeat="vote in topicsCtrl.times(topic.votes) track by $index"

  div[
    class="talking-about lane"
    ng-controller="LaneCtrl as laneCtrl"
    ng-model="topicsCtrl.service.talking_about"
    data-drop="true"
    data-jqyoui-droppable="{multiple:true, onOver: 'dragOver', onOut: 'dragOut', onDrop: 'dragOut'}"
    ]
    h1 Talking about

    ul class="topics"
      li[
        ng-controller="TopicCtrl as topicCtrl"
        ng-repeat="topic in topicsCtrl.service.talking_about"
        ng-click="topicCtrl.vote()"
        data-drag="true"
        data-jqyoui-options="{revert: 'invalid'}"
        ng-model="topicsCtrl.service.talking_about"
        data-jqyoui-draggable="{index: {{$index}}, animate: true}"
        class="topic"
        ]
        p ng-bind="topic.title"

  div[
    class="talked-about lane"
    ng-controller="LaneCtrl as laneCtrl"
    ng-model="topicsCtrl.service.talked_about"
    data-drop="true"
    data-jqyoui-droppable="{multiple:true, onOver: 'dragOver', onOut: 'dragOut', onDrop: 'dragOut'}"
    ]
    h1 Talked about

    ul class="topics"
      li[
        ng-controller="TopicCtrl as topicCtrl"
        ng-repeat="topic in topicsCtrl.service.talked_about"
        ng-click="topicCtrl.vote()"
        data-drag="true"
        data-jqyoui-options="{revert: 'invalid'}"
        ng-model="topicsCtrl.service.talked_about"
        data-jqyoui-draggable="{index: {{$index}}, animate: true}"
        class="topic"
        ]
        p ng-bind="topic.title"
